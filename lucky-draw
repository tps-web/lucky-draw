<body>
    <div id="app">
        <div class="box">
            <ul>
                <li v-for="(item,index) in list" :key="index" :class="'prize_li_'+item.index + (item.index == startKey ? ' curr' : '')">
                    <!-- <p><img :src="item.imgsrc"></p> -->
                    <p>{{item.prizeName}}</p>
                </li>
                <li class="btn" @click="luckyDraw"><img src="https://img-blog.csdnimg.cn/2020040716350182.png" alt=""></li>
            </ul>
        </div>
    </div>

    <script src="https://cdn.staticfile.org/vue/2.2.2/vue.min.js"></script>
    <script>
        var that
        var vm = new Vue({
            el: '#app',
            data: {
                ifChou: null, //是否正在抽奖中
                //抽奖结果类别
                getType: null, //1.积分。2.实物
                getHasPrize: null, //是否中奖品

                startKey: 0, //展示的奖品切换的 起始 KEY
                afterKye: null, //最终 抽到的奖品的 KEY
                flag: null, //为true时,startKey == afterKye停止奖品切换
                timeOutNum: 100, //抽奖时的切换时间(先快，获取到抽奖结果后再慢，然后再停止)
                timer: null,

                list: [{
                    id: '001',
                    index: 1,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '积分'
                }, {
                    id: '002',
                    index: 2,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '实物'
                }, {
                    id: '003',
                    index: 3,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '积分'
                }, {
                    id: '004',
                    index: 4,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '谢谢参与'
                }, {
                    id: '005',
                    index: 5,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '积分'
                }, {
                    id: '006',
                    index: 6,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '实物'
                }, {
                    id: '007',
                    index: 7,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '实物'
                }, {
                    id: '008',
                    index: 8,
                    imgsrc: 'https://www.baidu.com/img/bd_logo1.png',
                    prizeName: '谢谢参与'
                }, ]
            },
            created() {
                that = this
            },
            methods: {
                //随机数
                getRandomInt(min, max) {
                    return Math.floor(Math.random() * (max - min + 1)) + min;
                },
                Initialize() {
                    that.startKey = 0;
                    that.afterKye = null;
                    that.flag = null;
                    that.timeOutNum = 100;
                    that.timer = null;

                    that.ifChou = null;
                },
                luckyDraw() {
                    if (!that.ifChou) {
                        that.ifChou = true;
                    } else {
                        return;
                    }
                    //可以通过后端设置
                    // that.afterKye = 4
                    that.afterKye = that.getRandomInt(1, 8)
                    that.timer = setInterval(that.prizeChoose, that.timeOutNum);
                    setTimeout(() => {
                        clearTimeout(that.timer);
                        that.timeOutNum = 300;
                        that.timer = setInterval(that.prizeChoose, that.timeOutNum);
                        setTimeout(() => {
                            that.flag = true
                        }, 2000)
                    }, 1500)
                },
                //滚动
                prizeChoose() {
                    that.startKey++;
                    that.startKey = that.startKey > 8 ? 1 : that.startKey;

                    if (that.startKey === that.afterKye && that.flag) {
                        clearTimeout(that.timer);
                        setTimeout(() => {
                            alert(that.list[that.afterKye - 1].prizeName);
                            that.Initialize();
                        }, 800)
                    }
                }
            }
        })
    </script>
</body>

